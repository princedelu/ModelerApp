div(class='navbar navbar-inverse navbar-fixed-top',role='navigation')
    div(class='container',data-ng-controller="LoginCtrl")
        div(class='navbar-header')
            button(type='button',class='navbar-toggle',data-toggle='collapse',data-target='.navbar-collapse')
                span(class='sr-only') Toggle navigation
                span(class='icon-bar')
                span(class='icon-bar')
                span(class='icon-bar')
            a(class='navbar-brand',ng-click="redirectHome()") ModelerApp
        div(class='navbar-collapse collapse')
            ul(class='nav navbar-nav',data-access-level='accessLevels.user')
              li(ng-class="{active : isModuleElement}")
                a(ng-click="redirectElement()") Gestion des entit√©s
              li(ng-class="{active : isModuleRestit}")
                a(ng-click="redirectRestit()")  Affichage des restitutions
            form(class='navbar-form navbar-right',role='form',ng-submit="login()", name="loginForm",data-access-level='accessLevels.anon')
                div(class='form-group')
                    input(type="text", data-ng-model="username", placeholder="Utilisateur", name="username", required, autofocus,class='form-control')
                | &nbsp;
                div(class='form-group')
                    input(type="password", data-ng-model="password", placeholder="Mot de passe", name="password", required,class='form-control')
                | &nbsp;
                button.btn(type="submit", data-ng-disabled="loginForm.$invalid",class='btn btn-success') Connexion
                | &nbsp;
                span(class='glyphicon glyphicon-exclamation-sign app-pastille-error',data-ng-show='error',data-toggle="tooltip",title="Votre utilisateur ou votre mot de passe sont incorrectes")
            form(class='navbar-form navbar-right',role='form',ng-submit="logout()", name="logoutForm",data-access-level='accessLevels.user')
                div(class='app-user-info')
                    | Bienvenue&nbsp;
                    strong {{ user.username }}&nbsp;
                    span.label(data-ng-class='{"label-info": user.role.title == userRoles.user.title, "label-success": user.role.title == userRoles.admin.title}') {{ user.role.title }}
                    | &nbsp; 
                    button.btn(type="submit", data-ng-disabled="logoutForm.$invalid",class='btn btn-success') D&#233;connexion
            

